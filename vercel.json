{
  "name": "confidential-portfolio-manager",
  "version": 2,
  "buildCommand": "cd frontend && npm run build:vercel",
  "outputDirectory": "frontend/build",
  "installCommand": "cd frontend && npm install",
  "devCommand": "cd frontend && npm start",
  "framework": "create-react-app",
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "REACT_APP_CONTRACT_ADDRESS": "0x1222ea52e18529ce4feb108Cae999f74F6e6A297",
    "REACT_APP_NETWORK": "sepolia",
    "REACT_APP_CHAIN_ID": "11155111",
    "REACT_APP_ENV": "production",
    "REACT_APP_TITLE": "Confidential Portfolio Manager",
    "DISABLE_ESLINT_PLUGIN": "true",
    "GENERATE_SOURCEMAP": "false",
    "CI": "false"
  },
  "functions": {
    "frontend/build/static/**": {
      "headers": {
        "cache-control": "s-maxage=31536000"
      }
    }
  },
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ]
}